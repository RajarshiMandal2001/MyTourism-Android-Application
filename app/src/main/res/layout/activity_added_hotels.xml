<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddedHotels">

    <SearchView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search Hotels"
        android:iconifiedByDefault="false"
        android:id="@+id/search_hotels_search_view"></SearchView>

    <ProgressBar
        android:id="@+id/progress_bar_hotels"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ProgressBar>

    <ListView
        android:layout_marginTop="6dp"
        android:listSelector="@color/teal_200"
        android:id="@+id/added_hotels_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>