        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_hotel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_home_work_24"
                android:text="Hotel"></Button>
            <Button
                android:id="@+id/button_weather"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_wb_sunny_24"
                android:layout_marginLeft="6dp"
                android:text="Weather"></Button>
        </LinearLayout>
        <LinearLayout
